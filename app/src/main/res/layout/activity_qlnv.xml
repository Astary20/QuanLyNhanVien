<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.pc.quanlynhanvien.QLNVActivity">
    <TextView
        android:id="@+id/tvQuanly"
        android:text="Manage Employees"
        android:textSize="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuanly"
        android:hint="Code"/>
    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edCode"
        android:hint="Name"/>
    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edName"
        android:hint="Email"/>
    <EditText
        android:id="@+id/edPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edEmail"
        android:hint="Phone"/>
    <EditText
        android:id="@+id/edAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPhone"
        android:hint="Address"/>
    <Button
        android:id="@+id/btAdd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edAddress"
        android:text="Add"/>

    <Button
        android:id="@+id/btDelete"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edAddress"
        android:layout_toRightOf="@id/btAdd"
        android:text="Delete"/>

    <Button
        android:id="@+id/btList"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btDelete"
        android:text="List Employees"/>
    <Button
        android:id="@+id/btEdit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btList"
        android:layout_below="@+id/btDelete"
        android:text="Edit"/>
    <Button
        android:id="@+id/btChange"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btEdit"
        android:text="Change Pass"/>
    <Button
        android:id="@+id/btForget"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btList"
        android:layout_below="@+id/btEdit"
        android:text="Forget pass"/>

</RelativeLayout>
